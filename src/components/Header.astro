<style>
	a {
		padding: 0.5em 0.8em;
		color: rgb(255, 255, 255);
		position: relative;
		text-decoration: none;
		font-size: 16px;
	}

	a::before,
	a::after {
		content: '';
		height: 14px;
		width: 14px;
		position: absolute;
		transition: all 0.25s ease;
		opacity: 0;
	}

	a::before {
		content: '';
		right: 0;
		top: 0;
		border-top: 3px solid #3e8914;
		border-right: 3px solid #2e640f;
		transform: translate(-100%, 50%);
	}

	a:after {
		content: '';
		left: 0;
		bottom: 0;
		border-bottom: 3px solid #2e640f;
		border-left: 3px solid #3e8914;
		transform: translate(100%, -50%);
	}

	a:hover:before,
	a:hover:after {
		transform: translate(0, -0);
		opacity: 1;
	}

	a:hover {
		color: #3da35d;
	}
</style>
