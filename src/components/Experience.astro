---
import ExperienceItem from "./ExperienceItem.astro";

const EXPERIENCE = [
  {
    date: "Aug 2024 - Oct 2024",
    title: "Frontend Developer | Freelancer",
    company: "Upwork / IdeaPort LLC",
    jobFunctions: [
      "Responsible for designing and developing user interfaces for a government system using React.js",
    ],
  },
  {
    date: "Jul 2023 - Jun 2024",
    title: "Web Developer",
    company: "Smart Business Solutions (SMBS)",
    jobFunctions: [
      "Collaborated on a Cloud project, developing scalable user interface components using Angular",
      "Developed static pages using Vue.js",
      "Contributed to a scraping project using Python",
      "Developed an informative web application using React",
      "Developed web applications using Nextjs",
      "Developed APIs using Node.js and NestJS",
